{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Frontend (Vite)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "preLaunchTask": "npm: dev frontend"
    },
    {
      "name": "Debug Backend (Node + TSX)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "restart": true,
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Debug Frontend (Vite)", "Debug Backend (Node + TSX)"]
    }
  ]
}
